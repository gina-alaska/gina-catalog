= simple_form_for [:catalog, @collection], wrapper: :horizontal_form do |f|
  = f.error_notification
  .row
    .form-inputs
      = f.input :name
      = f.label 'Description', class: 'col-sm-3'
      .col-sm-9
        = f.text_area :description, cols: 40, rows: 10
      = f.label 'Hidden', class: 'col-sm-3'
      .col-sm-9
        = f.check_box :hidden

  .form-action.action-space
    = link_to :back, class: 'btn btn-default' do
      %i.fa.fa-arrow-left
      Cancel

    .pull-right
      = f.button :submit
