%fieldset
  .row
    .span4
      .control-group
        = f.label :start_date, class: 'control-label'
        .controls
          = f.text_field :start_date
      .control-group
        = f.label :end_date, class: 'control-label'
        .controls
          = f.text_field :end_date
    .span4
      .control-group
        = f.label :status, class: 'control-label'
        .controls
          = f.select :status, options_for_select(Asset::STATUSES, asset.status), {}
      .control-group
        = f.label :owner_id, class: 'control-label'
        .controls
          = f.select :owner_id, options_from_collection_for_select(User.all, :id, :fullname, asset.owner_id), {}
:javascript
  $('#asset_owner_id').select2();