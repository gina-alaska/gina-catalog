.navbar
  .navbar-inner
    .brand SDS Manager Dashboard
    .pull-right
      = link_to sds_admin_path, class: 'btn' do
        %i.icon-refresh
        Refresh

.row-fluid
  .span6
    %h4 Download Counts
    = render 'counts', total_downloads: @total_downloads
  .span6
    %h4 Top Downloads
    = render 'top_downloads', top_downloads: @top_downloads

.row-fluid
  .span12
    %h4 Latest Access Log
    %div{style:"max-height:500px; overflow:auto;"}
      = render 'access_log', access_log: @latest_access
