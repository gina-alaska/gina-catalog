= bootstrap_form_for [:manager, @use_agreement], layout: :horizontal, label_col: 'col-lg-3 col-md-3', control_col: 'col-lg-9 col-md-9' do |f|
  = f.alert_message "Please fix the errors below.", error_summary: false
  = f.text_field :title
  = f.text_area :body, cols: 40, rows: 10
  = f.form_group do
    = f.check_box :required

  .form-action
    = link_to :back, class: 'btn btn-default' do
      %i.fa.fa-arrow-left
      back

    .pull-right
      = f.primary
