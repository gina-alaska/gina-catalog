.row-fluid
  = form_for use_agreement, url: (use_agreement.new_record? ? sds_admin_use_agreements_path : sds_admin_use_agreement_path(use_agreement)) do |f|
    %fieldset
      .control-group
        = f.label :title, class: 'control-label'
        .controls
          = f.text_field :title, class: 'span12'
      .control-group
        = f.label :content, class: 'control-label'
        .controls
          = f.text_area :content, class: 'span12'
    .form-actions
      .pull-right
        = link_to 'Cancel', sds_admin_use_agreements_path, class: 'btn'
        = f.submit class: 'btn btn-primary'
