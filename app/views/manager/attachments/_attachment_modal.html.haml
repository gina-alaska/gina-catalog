#map-modal{ class: 'modal fade', role: 'dialog', 'aria-hidden' => 'true' }
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{ data: { dismiss: 'modal' }}
          %i.fa.fa-close
        %h4{ class: "modal-title" }= attachment.file.name
      .map-container.small
        #map.entry-map{ data: { behavior: 'map', target: 'map', 'mapbox-id' => 'gina-alaska.knb7oi02', 'max-zoom' => 15, 'fit-all' => 'true' }}
          %layer{ data: { url: entry_attachment_url(attachment.entry, attachment, format: :geojson) }}
