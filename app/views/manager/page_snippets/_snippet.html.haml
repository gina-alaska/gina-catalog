%li{id: dom_id(snippet, :list)}
  .row-fluid.group
    .span8.title
      %i.icon-file
      = link_to edit_manager_page_snippet_path(snippet), class: 'edit' do
        = snippet.slug
      - if snippet.system_page?
        .label.label-important System
    .span4.actions
      .btn-group
        = link_to edit_manager_page_snippet_path(snippet), class: 'btn', title: "Edit" do
          %i.icon-edit    
        = link_to manager_page_snippet_path(snippet), method: 'DELETE', class: 'btn btn-danger', data: { confirm: 'Are you sure?' }, title: "Delete Snippet" do
          %i.icon-trash.icon-white        