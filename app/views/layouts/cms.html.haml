!!!
%html
  %head
    %title
      gLynx admin
      = content_for :page_title

    = stylesheet_link_tag 'https://api.tiles.mapbox.com/mapbox.js/v2.1.4/mapbox.css'
    = javascript_include_tag 'https://api.tiles.mapbox.com/mapbox.js/v2.1.4/mapbox.js'

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-default.navbar-gina.navbar-static-top
      .container-fluid
        .navbar-header
          %button.navbar-toggle{ type: 'button', data: { toggle: 'collapse', target: '#header-navbar' }}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to admin_url, class: 'navbar-brand' do
            %span.gina gLynx
            \:: CMS #{current_portal.acronym}
        = render 'layouts/header'
    .container-fluid
      = render 'layouts/flash_messages'
      .row
        .col-sm-3
          = render 'layouts/cms_sidebar'
        .col-sm-9
          = yield
