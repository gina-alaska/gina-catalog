.row-fluid
  .span12
    = f.label :title
    = f.text_field :title, class: 'span12'

.row-fluid
  .span12
    = f.label :description
    = f.text_area :description, rows: 10, class: 'span12'    
.row-fluid
  .span6
    .control-group
      = f.label :start_date, class: 'control-label'
      .controls
        = f.text_field :start_date
    .control-group
      = f.label :end_date, class: 'control-label'
      .controls
        = f.text_field :end_date
  .span6
    .control-group
      = f.label :status, class: 'control-label'
      .controls
        = f.select :status, options_for_select(@catalog.class::STATUSES, @catalog.status), {}
    .control-group
      = f.label :owner_id, class: 'control-label'
      .controls
        = f.select :owner_id, options_from_collection_for_select(User.all, :id, :fullname, @catalog.owner_id), {}