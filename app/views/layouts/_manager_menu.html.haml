- if can? :view_manager_menu, current_user
  %li.dropdown
    = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
      Manager
      %span.caret

    %ul.dropdown-menu
      %li
        = link_to manager_path do
          %i.fa.fa-dashboard.fa-fw
          Dashboard
      - if can? :manage, Entry
        %li
          = link_to manager_entries_path do
            %i.fa.fa-cubes.fa-fw
            Catalog Records
      - if can? :manage, Organization
        %li
          = link_to manager_organizations_path do
            %i.fa.fa-university.fa-fw
            Organizations
      - if can? :manage, Contact
        %li
          = link_to manager_contacts_path do
            %i.fa.fa-phone.fa-fw
            Contacts
      - if can? :manage, Collection
        %li
          = link_to manager_collections_path do
            %i.fa.fa-sitemap.fa-fw
            Collections
      - if can? :update, Portal
        %li
          = link_to manager_portal_path do
            %i.fa.fa-cog.fa-fw
            Portal Settings
      - if can? :manage, UseAgreement
        %li
          = link_to manager_use_agreements_path do
            %i.fa.fa-pencil.fa-fw
            Use Agreements
      - if can? :manage, current_user.permissions.for(current_portal)
        %li
          = link_to manager_permissions_path do
            %i.fa.fa-lock.fa-fw
            Permissions
