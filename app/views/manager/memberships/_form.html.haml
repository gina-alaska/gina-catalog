= form_for [:manager, @membership], html: { class: 'form-horizontal' } do |f|
  - unless @membership.errors.full_messages.empty?
    .alert.alert-error
      %h4 Errors prevents this record from being saved
      %ul
        - @membership.errors.full_messages.each do |err|
          %li= err
  .control-group
    = f.label :email, class: 'control-label'
    .controls
      = f.text_field :email, class: "span6"

  .control-group
    = label_tag "Additional message text", nil, class: 'control-label'
    .controls
      = text_area_tag "add_text", params[:add_text], rows: 6, cols: 40, class: "span6"

  %fieldset
    %legend Member Roles
    .control-group
      .controls
        - current_setup.roles.all.each do |role|
          %label.checkbox
            = check_box_tag 'membership[role_ids][]', role.id, @membership.roles.include?(role)
            = role.description
  .row-fluid
    .span12
      .form-actions
        = f.submit class: 'btn btn-primary pull-right'
