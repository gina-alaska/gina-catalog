= form_for [:manager, @agreement] do |f|
  - unless @agreement.errors.full_messages.empty?
    .alert.alert-error
      %h4 Errors prevents this record from being saved
      %ul
        - @agreement.errors.full_messages.each do |err|
          %li= err

  = f.label :title
  = f.text_field :title, class: "span12"

  = f.label :content
  = f.text_area :content, class: "span12"

  .form-inline
    %label Required?
    %label.checkbox.offset1
      = f.check_box :required
      Yes
   
  .form-actions
    = link_to manager_use_agreements_path, class: 'btn' do
      %i.icon-arrow-left
      Back
    = f.submit class: 'btn btn-primary pull-right'
