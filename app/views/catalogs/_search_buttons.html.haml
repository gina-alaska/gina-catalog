.row-fluid#search_buttons
  .span4
    .nav.dropdown{style:'margin-bottom:0px; color:#000;', data: { title: "Limit Results", content: "Limit the number of records displayed on each page.", trigger: "hover", toggle: "popover", placement: "right", container: "#search_buttons" }}
      = link_to '#', class: "btn btn-block dropdown-toggle", data: { 'loading-text' => 'Loading...', toggle: "dropdown" } do
        = "Limit: #{@limit}"
        %i.caret
      %ul.dropdown-menu
        %li
          =link_to search_path(limit: "30"), data: { behaviour: 'stash', target: '#limit', value: 30 }, method: :get do
            30 Records
        %li
          =link_to search_path(limit: "100"), data: { behaviour: 'stash', target: '#limit', value: 100 }, method: :get do
            100 Records
        %li
          =link_to search_path(limit: "500"), data: { behaviour: 'stash', target: '#limit', value: 500 }, method: :get do
            500 Records
  .span4
    = link_to 'Clear', '/search', class: 'btn btn-block', data: { title: "Clear Search Parameters", content: "Clear all search fields and start a new search.", trigger: "hover", toggle: "popover", placement: "bottom", container: "#search_buttons" }
  .span4
    = submit_tag 'Search', class: 'btn btn-primary btn-block', data: { title: "Search Records", content: "Search for records in this portal or update a previous search.", trigger: "hover", toggle: "popover", placement: "bottom", container: "#search_buttons" }
.row-fluid#search_buttons
  .span12
    .nav.dropdown
      = link_to '#', class: "btn btn-block dropdown-toggle", data: { toggle: "dropdown" }, style: "margin-top: 3px;" do
        = "Download Search Results to #{@format}"
        %b.caret
      %ul.dropdown-menu
        %li 
          = link_to search_path(format: "js"), data: { behaviour: 'stash', target: '#format', value: "js" }, method: :get do
            Normal Search
        %li 
          = link_to search_path(format: :csv), data: { behaviour: 'stash', target: '#format', value: "csv" }, method: :get do
            CSV
        %li 
          = link_to search_path(format: :pdf), data: { behaviour: "stash", target: "#format", value: "pdf" }, method: :get do
            PDF
