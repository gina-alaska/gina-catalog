- if can? :view_manager_menu, current_user
  %li.dropdown
    = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
      Manager
      %span.caret

    %ul.dropdown-menu
      %li
        = link_to manager_path do
          %i.fa.fa-dashboard
          Dashboard
      - if can? :manage, Entry
        %li
          = link_to manager_entries_path do
            %i.fa.fa-cubes
            Catalog Records
      %li
        = link_to manager_agencies_path do
          %i.fa.fa-university
          Agencies
      %li
        = link_to manager_contacts_path do
          %i.fa.fa-phone
          Contacts
      %li
        = link_to manager_collections_path do
          %i.fa.fa-sitemap
          Collections
      %li
        = link_to manager_portal_path do
          %i.fa.fa-cog
          Portal Settings
      %li
        = link_to manager_use_agreements_path do
          %i.fa.fa-pencil
          Use Agreements
      - if can? :manage, current_user.permissions.for(current_portal)
        %li
          = link_to manager_permissions_path do
            %i.fa.fa-lock
            Permissions
