        %li
          %a{ href: "#", type: 'button', data: { action: 'insert', html: '{{ root_page.description }}' } } Description
    %li.dropdown-submenu
      %a{ href: "#" } Portal:
      %ul.dropdown-menu
        %li
          %a{ href: "#", type: 'button', data: { action: 'insert', html: '{{ portal.title }}' } } Title
        %li
          %a{ href: "#", type: 'button', data: { action: 'insert', html: '{{ portal.acronym }}' } } Acronym
        %li
          %a{ href: "#", type: 'button', data: { action: 'insert', html: '{{ portal.by_line }}' } } By Line
