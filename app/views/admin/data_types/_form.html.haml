= bootstrap_form_for [:admin, @data_type], layout: :horizontal, label_col: 'col-lg-3 col-md-3', control_col: 'col-lg-9 col-md-9' do |f|
  = f.alert_message "Please fix the errors below.", error_summary: false
  = f.text_field :name, wrapper_class: 'required'
  = f.text_field :description

  .form-action
    = link_to :back, class: 'btn btn-default' do
      %i.fa.fa-arrow-left
      Cancel

    .pull-right
      = f.primary @data_type.new_record? ? "Create Data Type" : "Update Data Type"
