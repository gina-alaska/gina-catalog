.panel.panel-default
  .panel-heading{ style: 'position: relative' }
    = link_to new_manager_collection_path, class: 'btn btn-success panel-btn-right' do
      New Collection
    %ol.breadcrumb
      %li.active
        %i.fa.fa-sitemap
        Collections 
  
  %table.table.table-striped.table-condensed
    %thead
      %tr
        %th{ class: 'col-lg-6 col-md-6' } Name
        %th{ class: 'col-lg-3 col-md-3' } Hidden
        %th{ class: 'col-lg-1 col-md-1' } Actions
    %tbody
      = render(partial: "collection_row", collection: @collections, as: :collection) || "<tr><td colspan=\"4\">There are no collections defined</td></tr>".html_safe

