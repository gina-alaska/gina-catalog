= nested_form_for [:manager, @person] do |f|
  - unless @person.errors.full_messages.empty?
    .alert.alert-error
      %h4 Errors prevents this record from being saved
      %ul
        - @person.errors.full_messages.each do |err|
          %li= err

  .row-fluid
    .span4
      = f.label :first_name
      = f.text_field :first_name, class: "span12"
    .span4
      = f.label :last_name
      = f.text_field :last_name, class: "span12"
  / .row-fluid
  /   .span2
  /     = f.label :salutation
  /     = f.text_field :salutation, class: "span12"
  /   .span2
  /     = f.label :suffix
  /     = f.text_field :suffix, class: "span12"

  = f.label :email
  = f.text_field :email, class: "span12"

  = f.label :url
  = f.text_field :url, class: "span12"

  %fieldset#phones
    %legend 
      Phone Numbers
      = f.link_to_add :phone_numbers, :data => { :target => "#phones" }, class: "btn btn-mini btn-success" do
        %i.icon-plus.icon-white
        Add Phone Number
    .header.row-fluid
      .span4 
        %strong Type
      .span6
        %strong Number 
        (Blank entries will not be saved)
        
      .span2.actions 
        %strong Actions
    .body
      .phones
        = f.fields_for :phone_numbers
  .form-actions
    = link_to manager_people_path, class: 'btn' do
      %i.icon-arrow-left
      Back
  
    = f.submit class: 'btn btn-primary pull-right'
