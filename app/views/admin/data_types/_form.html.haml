= simple_form_for [:admin, @data_type], wrapper: :horizontal_form do |f|
  = f.error_notification
  .row
    .form-inputs
      = f.input :name
      = f.input :description

  .form-action.action-space
    = link_to :back, class: 'btn btn-default' do
      %i.fa.fa-arrow-left
      Cancel

    .pull-right
      = f.button :submit, @data_type.new_record? ? "Create Data Type" : "Update Data Type"
