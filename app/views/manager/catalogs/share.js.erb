<% [:notice, :error, :success, :warning].each do |type| %>
  <% next if flash.now[type].blank? %>
  <% Array.wrap(flash.now[type]).each do |msg| %>
    new FlashMessage('<%= type %>', '<%= msg %>');
  <% end %>
<% end %>

var content = $('<%= escape_javascript(render("shared/catalogs/manage_button", catalog: @catalog)) %>')
var published_content = $('<%= escape_javascript(render("catalogs/ispublished", catalog: @catalog)) %>')
$('<%= dom_id(@catalog, "#manage") %>').html(content);
$('#catalog-published').html(published_content);
$('.spinner-container').spin(false);