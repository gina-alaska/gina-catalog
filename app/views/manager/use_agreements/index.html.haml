.panel.panel-default
  .panel-heading{ style: 'position: relative' }
    = link_to new_manager_use_agreement_path, class: 'btn btn-sm btn-success panel-btn-right' do
      New Use Agreement
      
    .panel-title
      %ol.breadcrumb
        %li.active
          %i.fa.fa-pencil
          Use Agreements
  
  %table.table.table-striped.table-condensed
    %thead
      %tr
        %th.col-sm-6 Title
        %th.col-sm-2 Required
        %th.col-sm-2 Archived
        %th.text-right Actions
    %tbody
      = render(partial: "use_agreement_row", collection: @use_agreements, as: :use_agreement) || "<tr><td colspan=\"3\">There are no use agreements found!</td></tr>".html_safe
