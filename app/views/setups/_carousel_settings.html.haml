.images.row-fluid
  %ul.thumbnails.carousel
    - @setup.carousel_images.each do |image|
      %li.span4{style:'position: relative'}
        = render 'image', image: image
        .buttons
          = link_to 'X', remove_carousel_image_settings_path(image_id: image), method: 'POST', remote: true
#add_image_modal.modal.hide.fade{tabindex:"-1", role:"dialog",style:"width:960px; margin-left:-480px;"}
  .modal-header
    = link_to 'x', '#', class: 'close', data: { dismiss: 'modal' }
    %h3 Select and Image
  .modal-body{style:'padding:0; max-height:inherit;'}
    %iframe{src:images_path, style:"width:100%;height:400px;border:0px;"}
  .modal-footer
    = link_to 'Close', '#', data: { dismiss: 'modal' }
:javascript
  $('#add_image_modal').on('hidden', function() {
    $('#carousel_images .images').load('#{settings_path} #carousel_images ul');
  });