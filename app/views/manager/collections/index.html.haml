%table.table.table-bordered.table-striped.table-condensed
  %thead
    %tr
      %td{colspan:3, style: 'padding:0;'}
        .navbar.navbar-static-top
          .navbar-inner
            = link_to new_manager_collection_path, class: 'btn btn-success pull-right' do
              %i.icon-plus.icon-white
              New Collection
    %tr
      %th Name
      %th Description
      %th 
  %tbody
    - @catalog_collections.each do |item|
      %tr
        %td= item.name
        %td= item.description
        %td
          .btn-group
            = link_to edit_manager_collection_path(item.id), class: 'btn', title: "Edit" do
              %i.icon-edit
            = link_to manager_collection_path(item.id), method: :delete, confirm: "Are you sure?", class: 'btn btn-danger', title: "Delete Collection" do
              %i.icon-trash.icon-white
