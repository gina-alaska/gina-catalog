.title= project.title

- unless project.published?
  .not-published
    %h2 This project is pending review by the system moderators
    %p After a moderator has reviewd the project, it will become available for public viewing
  .spacer

- if project.published? or project.owner == current_user or current_user.is_an_admin?
  .description.tabbed= raw RDiscount.new(project.description).to_html
  .spacer

  .status.tabbed
    %label Status:
    = project.status

  -#- unless project.year_funded.nil?
  -#  .funded.tabbed
  -#    %label Year Funded:
  -#    = project.year_funded
  - unless project.start_date.nil?
    .start_date.tabbed
      %label Start Date:
      = project.start_date.strftime('%Y/%m/%d')
  - unless project.end_date.nil?
    .end_date.tabbed
      %label End Date:
      = project.end_date.strftime('%Y/%m/%d')

  .spacer

  - unless project.primary_contact.nil?
    .primary_contact.tabbed
      %label Primary Contact:
      = render project.primary_contact
    .spacer

  - unless project.people.nil? or project.people.empty?
    .other_contacts.tabbed
      %label Other Contacts:
      = render project.people
    .spacer

  - unless project.source_agency.nil?
    .source_agency.tabbed
      %label Primary Agency:
      = project.source_agency.name

  - unless project.funding_agency.nil?
    .funding_agency.tabbed
      %label Funding Agency:
      = project.funding_agency.name

  .agencies.tabbed
    %label Other Agencies:
    = project.agencies.collect(&:acronym).compact.join(', ')

  .spacer

  - unless project.locations.nil? or project.locations.empty?
    .locations.tabbed
      %label Locations:
      = project.locations.collect(&:name).compact.join(', ')
    .spacer

  -#.gcmd_themes.tabbed
  -#  %label GCMD Themes:
  -#  = project.gcmd_themes.collect(&:name).compact.join(', ')
  -#.spacer

  - unless project.tags.nil? or project.tags.empty?
    .tags.tabbed
      %label Tags:
      = project.tags.list
    .spacer

  - unless project.links.nil? or  project.links.empty?
    .links.tabbed
      %label Links:
      %ul= render project.links
    .spacer

  -#- unless project.note.nil? or project.note.text.empty?
  -#  .notes.tabbed
  -#    %label Notes:
  -#    = raw RDiscount.new(project.note.text).to_html
  -#  .spacer

  .project_info_source.tabbed
    %label Project Information Source:
    .organization.tabbed
      %label Organization:
      = project.data_source.name
    .website.tabbed
      %label Website:
      = link_to project.source_url, project.source_url, :target => :_blank