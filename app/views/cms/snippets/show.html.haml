.panel.panel-default
  .panel-heading
    %h1.panel-title #{@cms_snippet.name} preview
  .panel-body
    = @cms_snippet.render

- content_for :sidebar_menu do
  = link_to edit_cms_snippet_path(@cms_snippet), class: 'list-group-item' do
    %i.fa.fa-edit.fa-fw
    Edit snippet
  = link_to cms_snippets_path, class: 'list-group-item' do
    %i.fa.fa-arrow-left.fa-fw
    Back to snippet list
