.panel.panel-default
  .panel-heading{ style: 'position: relative' }
    %ol.breadcrumb
      %li
        = link_to [:manager, :agencies] do
          %i.fa.fa-university
          Agencies
      %li.active= @agency.name
  
  .panel-body
    %dl.dl-horizontal
      %dt Acronym
      %dd= @agency.acronym
      %dt Description
      %dd= @agency.description
      %dt Category
      %dd= @agency.category
      %dt Url
      %dd= @agency.url
      %dt Active
      %dd= @agency.active.blank? ? "No" : "Yes"
      %dt Aliases
      - @agency.aliases.each do |item|
        %dd= item.text
      %dt Logo
      %dd= image_tag @agency.logo.thumb('150x150#').url unless @agency.logo.blank?

  .panel-footer
    
