- if page.images.count == 0
  %p.lead No images 
- else
  %ul
    - page.images.each do |image|
      - cache(['page_images', page, image, 'v3']) do
        %li.thumbnail{ style: "text-align: center;"}
          .image
            = image_tag image.thumbnail('250x100').try(:url), alt: image.title
          .info
            .caption
              %strong= link_to_unless image.link_to_url_or_raw_url.blank?, image.title, image.link_to_url_or_raw_url
              %p= image.description
            .btn-group{style:"text-align:center;"}
              = link_to 'Edit', edit_manager_image_path(image), class: 'btn', target: :_blank
              = link_to 'Remove', remove_manager_page_content_image_path(page, image), method: "POST", data: { confirm: 'Are you sure?' }, class: 'btn', remote: true