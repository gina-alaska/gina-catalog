.panel.panel-default
  .panel-heading
    .panel-title
      %i.fa.fa-users
      Users
    
  %table.table.table-bordered.table-striped
    %thead
      %tr
        %th Name
        %th Email
        %th Global admin?
    %tbody
      - @users.each do |user|
        %tr
          %td= link_to user, admin_user_path(user)
          %td= user.email
          %td= user.global_admin? ? 'Yes' : 'No'
    