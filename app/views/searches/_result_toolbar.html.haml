%div{id: dom_id(catalog, :more_info)}

%div.clearfix{ style: 'margin: 5px 5px 0 0;'}
  %span.agency-logo-list
    - [catalog.source_agency, catalog.funding_agency, catalog.agencies].flatten.uniq.compact.each do |agency|
      - next if agency.logo.nil?
      %span.agency-logo-thumb{title: agency.name}
        = image_tag cms_media_path(agency.logo_uid, size: 'x30')

  .pull-right
    .btn-group
      = link_to more_info_catalog_path(catalog), class: "btn", id: dom_id(catalog, "info_button"), remote: true, data: {"less-text" => "<i class='icon-minus'/> Less"}, title: 'More Info' do
        %i.icon-plus 
        More

    .btn-group
      - unless catalog.geometry_center_collection.blank?
        = link_to '#', class: 'btn', data: { "openlayers-action" => "select-features", target: "##{dom_id(catalog, :record)}" }, title: 'Zoom To' do
          %i.icon-map-marker
          
      = render 'preview_button', catalog: catalog

    .btn-group  
      = link_to catalog, class: 'btn btn-primary', target: :_blank do
        Full Record
        %i.icon-arrow-right