.map-container{ style: 'position: relative' }
  .btn.btn-default.btn-small{ data: { behavior: 'move-left' }, style: 'top: 10px; right: 10px; display: none; position: absolute; z-index: 10000;'}
    %i.fa.fa-compress
  .btn.btn-default.btn-small{ data: { behavior: 'move-top' }, style: 'top: 10px; right: 10px; position: absolute; z-index: 10000;'}
    %i.fa.fa-expand
  #search-map.search-map{ data: { behavior: 'map', target: 'search-map', 'mapbox-id' => 'gina-alaska.knb7oi02', 'max-zoom' => 15 } }
    %layer{ data: { paged: 'true', url: url_for(params.merge(page: 1, format: :geojson)), fit: 'true', 'geojson-options' => 'custom-marker', 'marker-label-field' => 'index', cluster: 'true' }}
      %popup
        %h1 {{title}}
        %p {{description}}
        <a href="{{url}}" class="btn btn-primary btn-block btn-sm">View Record</a>
