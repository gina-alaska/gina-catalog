- content_for :sidebar_menu do
  = render 'page_list'

  = link_to edit_cms_page_path(page), class: 'list-group-item list-group-item-info' do
    %i.fa.fa-edit.fa-fw
    Edit page
  = link_to new_cms_page_path(parent: page), class: 'list-group-item list-group-item-success' do
    %i.fa.fa-plus.fa-fw
    New page
  - unless page.system_page?
    = link_to page, method: :delete, data: { confirm: 'Are you sure? All child pages will also be deleted.  This cannot be undone!' }, class: 'list-group-item list-group-item-danger' do
      %i.fa.fa-trash.fa-fw
      Delete page
  = link_to '#image-attachment-modal', class: 'list-group-item', data: { toggle: 'modal' } do
    %i.fa.fa-fw.fa-image
    Attach image
  = link_to reorder_cms_pages_path, class: 'list-group-item' do
    %i.fa.fa-fw.fa-sort
    Reorder pages

%ul.nav.nav-tabs
  -%w(info preview).each_with_index do |tab, index|
    %li{ class: index == 0 ? 'active' : '' }
      = link_to "#page-#{tab}", data: { toggle: 'tab' } do
        = tab.humanize

.tab-content
  #page-info.panel.panel-default.tab-pane.active
    .panel-body{ style: 'position: relative;'}
      = render 'labels', cms_page: page
      %p
        %strong Title:
        = page.title

      %p
        %strong URL:
        = link_to page_url(page.ancestry_path), page_url(page.ancestry_path)

      %p
        %strong Layout:
        = page.cms_layout

      - if page.redirect_url?
        %p
          %strong Redirects to:
          = link_to page.redirect_url, page.redirect_url
    .panel-body
      = render 'image_attachments', page: page
  #page-preview.tab-pane
    = render 'preview', page: page
