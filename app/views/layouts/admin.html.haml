- theme = NSCatalog::Application.config.theme
!!!5
%html
  %head
    = render "layouts/#{theme}/head"
    = javascript_include_tag 'admin'
    = stylesheet_link_tag 'admin', :media => 'all'
  %body
    #header.navbar.navbar-fixed-top
      .navbar-inner
        .container
          = link_to 'Catalog Admin', admin_path, class: 'brand'
          = render 'layouts/admin_menu'
    .visible-desktop.spacer{style: "margin-top: 45px;"}
    #content.container
      = show_flash_messages
      .row
        .span3
          %ul.nav.nav-list
            %li.nav-header Menu
            %li
              = link_to admin_users_path do
                %i.icon-user
                Users
            %li
              = link_to admin_roles_path do 
                %i.icon-briefcase
                Roles
        .span9
          = yield
