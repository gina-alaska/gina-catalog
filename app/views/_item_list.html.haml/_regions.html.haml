%h3.panel-title Regions
- unless @facets.regions.empty?
  .panel-body.panel-break
    %h3.panel-title Regions
  #region-type-search.panel-body.expand{ style: 'padding-top: 5px; padding-bottom: 0px; '}
    - @facets.regions.each do |facet|
      - region = facet[:record]
      %div
        %label{ style: 'width: 100%;' }
          = check_box_tag 'search[region_id]', region.id, @search_params.try(:[], 'region_id').to_i == 
          region.id
          = region.name
          %span.badge.badge-default= facet[:count]
  - if @facets.regions.count > 3
    .panel-body{ style: 'padding-top: 0px; '}
      = link_to 'show more...', '#region-type-search', data: { toggle: 'expand', 'toggletext' => 'show less...' }