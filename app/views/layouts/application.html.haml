- theme = NSCatalog::Application.config.theme
!!! 5
%html
  %head
    = render "layouts/#{theme}/head"  
    = javascript_include_tag "http://glink.gina.alaska.edu/cdn/libs/proj4js-1.0/lib/proj4js-compressed.js", "http://maps.google.com/maps/api/js?v=3&sensor=false", "http://glink.gina.alaska.edu/cdn/libs/OpenLayers-2.12/OpenLayers.js"
    = javascript_include_tag "application", 'data-turbolinks-track' => true
    = stylesheet_link_tag 'application', 'data-turbolinks-track' => true
    /[if IE 7]
      = stylesheet_link_tag "font-awesome-ie7.min.css", media: "all"
    = render "layouts/#{theme}/analytics" unless current_setup.analytics_account.nil? or Rails.env == 'development'
    = csrf_meta_tag
    = render 'layouts/theme'
  %body
    .spinner-container
    #flashes
    #top
    - if user_signed_in?
      #sitemanager_toolbar.navbar.navbar-static-top
        .navbar-inner
          %ul.nav.hide-buttons
            %li
              = link_to '#', data: { action: 'hide_toolbar', target: '#sitemanager_toolbar', dir: 'left' } do
                %i.icon-chevron-left
              
          .brand 
            Portal Tools
          .pull-right
            %ul.nav
              - if current_member.access_cms? or current_member.access_catalog? or current_member.access_site_admin?
                %li
                  = link_to manager_path do
                    %i.icon-cog.icon-spin
                    Manage Portal
              - if member_portals.count > 0 # unless current_user.memberships.empty?
                %li.dropdown
                  = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
                    Switch Portals
                    %b.caret
                  
                  %ul.dropdown-menu
                    - member_portals.each do |s|
                      %li= link_to s.title, "http://#{ s.default_url }"
              %li.dropdown.avatar
                = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
                  %img{ src: avatar_url(current_user, 40) }
                  = current_user.fullname
                  %b.caret
                %ul.dropdown-menu
                  %li
                    = link_to logout_path do
                      %i.icon-lock
                      Logout
            %ul.nav.hide-buttons
              %li
                = link_to '#', data: { action: 'hide_toolbar', target: '#sitemanager_toolbar', dir: 'right' } do
                  %i.icon-chevron-right
    
    = current_setup.theme.css.html_safe
    .container
      #header= render "layouts/#{theme}/header"
      %div{id: (@page.nil? ? 'content' : "#{@page.slug.parameterize}-page") }
        = show_flash_messages
        = yield
      #footer= render_snippet_content current_setup.snippets.where(slug: 'footer').first, current_setup
    = link_to '#top', class: 'goto-top', data: { action: 'scroll' } do
      %i.icon-arrow-up
      Top
      
    
