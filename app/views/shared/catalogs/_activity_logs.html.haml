%ul.list-group
  - catalog.activity_logs.updates.limit(10).each do |log|
    %li.list-group-item
      .header
        - if log.user.nil?
          .avatar{ title: 'System' }
            %i.icon.icon-cog
        - else
          = image_tag avatar_url(log.user, 30), class: 'avatar', title: log.user.fullname
        = log.created_at
      .body= log.log[:message]