.navbar
  .navbar-inner
    .brand Users
    = form_tag manager_users_path, method: 'GET', class: 'navbar-form pull-right' do
      = text_field_tag :q, params[:q], class: 'search-query', placeholder: 'Enter user search terms here'
      = submit_tag 'Search', class: 'btn'  
    .btn-group.pull-right{style:"margin-right: 5px;"}
      = link_to 'All', manager_users_path(q: ''), class: 'btn ' + (!params[:q] || current_page?(q: '') ? 'active' : '')
      = link_to 'Admin', manager_users_path(q: 'admin'), class: 'btn ' + (current_page?(q: 'admin') ? 'active' : '')
      = link_to 'Manager', manager_users_path(q: 'manager'), class: 'btn ' + (current_page?(q: 'manager') ? 'active' : '')
.row-fluid
  = render 'users', users: @users