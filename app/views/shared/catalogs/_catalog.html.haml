- collapse ||= false
- if !catalog.published?
  %h4.alert.alert-warning
    This catalog record is pending review by the system moderators. 
    %br/
    before it will become available for public viewing

%h4.title= catalog.title

- if catalog.published? or (current_user and current_user.is_an_admin?)
  .row-fluid
    .span8
      = render '/shared/catalogs/status', item: catalog
      %dl
        %dt Description
        %dd
          :markdown
            #{catalog.description}
    .span4
      = render '/shared/catalogs/files', catalog: catalog  
      
  = render '/shared/catalogs/collapsed_content', item: catalog, collapse: collapse