.panel.panel-default
  .panel-heading
    %h1.panel-title New CMS Page
  .panel-body
    = render 'form'

- content_for :sidebar_menu do
  .list-group
    - if @parent_page.nil?
      = link_to cms_pages_path, class: 'list-group-item' do
        %i.fa.fa-arrow-left.fa-fw
        Back to pages
    - else
      = link_to cms_page_path(@parent_page), class: 'list-group-item' do
        %i.fa.fa-arrow-left.fa-fw
        Back to pages
