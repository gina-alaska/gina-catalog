.row
  .col-sm-4
    .panel.panel-default
      .panel-heading
        %h1.panel-title
          %i.fa.fa-cubes
          Catalog Records

      .panel-body
        = link_to new_manager_entry_path, class: 'btn btn-success btn-block' do
          New Catalog Record
    = render 'search/form'
  .col-sm-8
    %ul.media-list.entries
      - @entries.each do |entry|
        %li.entry.media{ id: dom_id(entry), style: 'border-bottom: 1px solid #efefef;' }
          .media-body
            = render 'search/entry', entry: entry
          = render 'actions', entry: entry
          .entry-type{ style: "background: #{entry.entry_type.color}"}
            = entry.entry_type
