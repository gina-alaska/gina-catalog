.navbar.navbar-static-top
  .navbar-inner
    .brand Agencies
    = link_to new_manager_agency_path, class: 'btn btn-success pull-right' do
      %i.icon-plus.icon-white
      New Agency

%br/
%table.table.table-bordered.table-striped.table-condensed
  %thead
    %tr
      %th Name
      %th Category
      %th Actions
  %tbody
    - @agencies.each do |item|
      %tr
        %td= item.name
        %td= item.category
        %td
          = link_to "Edit", edit_manager_agency_path(item.id), class: 'btn btn-primary'
          = link_to "Delete", manager_agency_path(item.id), method: :delete, confirm: "Are you sure?", class: 'btn btn-danger'
