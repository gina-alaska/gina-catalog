.navbar.navbar-static-top
  .navbar-inner
    .brand Images
    = link_to '#', class: 'btn btn-success pull-right' do
      %i.icon-plus.icon-white
      Add Image
.row-fluid
  .span12{style:'padding: 3px;'}
    - if page.images.count == 0
      %p.lead No images 
    %ul.thumbnails
      - page.images.each do |image|
        %li.span3
          .thumbnail
            = image_tag image.file.thumb('100x100').url, alt: image.title
            %h4= link_to_unless image.link_to_url.empty?, image.title, image.link_to_url
            %p= image.description
            .buttons{style:"text-align:center;"}
              = link_to 'Add', add_carousel_image_settings_path(image_id: image), method: 'POST', class: 'btn'
              = link_to 'Edit', edit_image_path(image), class: 'btn'
              = link_to 'Delete', image, method: "DELETE", data: { confirm: 'Are you sure?' }, class: 'btn'