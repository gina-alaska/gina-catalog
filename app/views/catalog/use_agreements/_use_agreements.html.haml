#map-layers-container
  %table{ id: 'map-layer-table', class: 'table table-striped table-condensed' }
    %thead
      %tr
        %th Record
        %th Description
        %th.text-right.col-sm-2 Action
    %tbody
      - use_agreement.entries.each do |eml|
        %tr
          %td
            = link_to eml.title, entry_path(eml), title: 'Show Full Record'
          %td
            = eml.description
          %td.text-right
            .btn-group
              = link_to edit_catalog_entry_path(eml), class: 'btn btn-default btn-sm', title: 'Edit Record' do 
                %i.fa.fa-edit
              = link_to catalog_entry_path(eml, entry: { use_agreement_id: nil}, commit: 'remove map layer'), method: :patch, remote: true, class: 'btn btn-danger btn-sm', title: 'Unlink Record' do 
                %i.fa.fa-times
