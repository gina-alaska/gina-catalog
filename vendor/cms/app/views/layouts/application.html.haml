!!! 5
%html
%head
  %title North Slope Science Catalog
  %link{ :href => '/images/favicon3.ico', :rel => "SHORTCUT ICON"}
  %meta{ :name => 'description', :content => 'North Slope Science Initiative Catalog' }
  %meta{ :name => 'keywords', :content => 'North Slope Science Initiative Catalog data projects tracking geographic information network alaska' }
  %meta{ :name => 'author', :content => 'GINA' }

  = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
  = stylesheet_link_tag 'print.css', :media => 'print'
  /[if IE]
    = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
  -#= require comfortable_mexican_sofa/reset.css
  -#= require comfortable_mexican_sofa/typography.css
  -#= require comfortable_mexican_sofa/structure.css
  -#= require comfortable_mexican_sofa/form.css
  -#= require comfortable_mexican_sofa/content.css
  -#= require comfortable_mexican_sofa/widgets.css
  -#= require comfortable_mexican_sofa/codemirror.css
  -#= require comfortable_mexican_sofa/jquery_ui.css
  -#= include_css(:extjs, :version => '4.0.5')
  -#= include_js(:extjs, :version => '4.0.5')
  -#= include_app_js(:application)
  -#= javascript_include_tag 'application'
  -#= javascript_include_tag('/data.js')

%body.bp.two_col
  #page
    #header
      = render 'layouts/header'
    #sidebar
      = cms_snippet_content('navigation')
    #content
      = yield
    #footer
      = render 'layouts/footer'
