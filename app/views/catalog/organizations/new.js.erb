var modal = $('<%= escape_javascript(render('organization_modal', organization: @organization)) %>').modal();
modal.on('hidden.bs.modal', function() {
  $(this).remove();
})
modal.on('shown.bs.modal', function() {

  _modal = this
  $('#organization-modal form').on('ajax:success', function(evt, data, status, xhr) {
    $(_modal).modal('hide');
  });
});
