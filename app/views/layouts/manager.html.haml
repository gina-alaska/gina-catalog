!!!
%html
  %head
    %title
      = current_portal.title
      admin
      = content_for :page_title

    = stylesheet_link_tag 'https://api.tiles.mapbox.com/mapbox.js/v2.1.4/mapbox.css'
    = javascript_include_tag 'https://api.tiles.mapbox.com/mapbox.js/v2.1.4/mapbox.js'

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    = render 'layouts/navbar'
    .container-fluid
      = render 'layouts/manager/mainmenu'
      / = render 'layouts/manager/sidebar'
      = render 'layouts/flash_messages'
      - if content_for?(:sidebar)
        .row
          .col-sm-3
            = content_for :sidebar
          .col-sm-9
            = yield
      - else
        = yield
