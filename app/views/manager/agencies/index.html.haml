.panel.panel-default
  .panel-heading{ style: 'position: relative' }
    = link_to new_manager_agency_path, class: 'btn btn-success panel-btn-right' do
      New Agency
    %ol.breadcrumb
      %li.active
        %i.fa.fa-university
        Agencies 
  
  %table.table.table-striped.table-condensed
    %thead
      %tr
        %th.col-lg-8.col-md-3 Name
        %th.col-lg-3.col-md-3 Acronym
        %th.col-lg-4.col-md-4 Description
        %th.col-lg-1.col-md-1 Actions
    %tbody
      = render(partial: "agency_row", collection: @agencies, as: :agency) || "<tr><td colspan=\"4\">There are no agencies available</td></tr>".html_safe
