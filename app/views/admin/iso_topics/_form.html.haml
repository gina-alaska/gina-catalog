= simple_form_for [:admin, @iso_topic], wrapper: :horizontal_form do |f|
  = f.error_notification
  .row
    .form-inputs
      = f.input :iso_theme_code, label: 'Theme Category Code', placeholder: 'Enter 3 character code'
      = f.input :name, label: 'Topic Category Name', placeholder: 'Add category name'
      = f.input :long_name, label: 'Topic Category Long Name', placeholder: 'Add category name (long form)'

  .form-action.action-space
    = link_to :back, class: 'btn btn-default' do
      %i.fa.fa-arrow-left
      Cancel

    .pull-right
      = f.button :submit, @iso_topic.new_record? ? "Create ISO Topic" : "Update ISO Topic"
