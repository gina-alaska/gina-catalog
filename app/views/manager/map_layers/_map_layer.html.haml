%tr
  %td= map_layer.read_attribute(:type).underscore.humanize
  %td= map_layer.name
  %td= map_layer.url
  %td
    .btn-group
      = link_to edit_manager_catalog_map_layer_path(map_layer.catalog, map_layer), class: 'btn', remote: true, title: 'Edit' do
        %i.icon-edit
      = link_to manager_catalog_map_layer_path(map_layer.catalog, map_layer), method: :delete, title: 'Delete', data: { confirm: 'Are you sure?' }, class: 'btn btn-danger', remote: true do
        %i.icon-trash