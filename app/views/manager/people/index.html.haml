= paginate @people
%table.table.table-bordered.table-striped.table-condensed
  %thead
    %tr
      %td{colspan:5, style: 'padding:0;'}
        .navbar.navbar-static-top
          .navbar-inner
            = form_tag manager_people_path, method: 'GET', class: 'navbar-form form-search pull-right' do        
              .input-append
                = text_field_tag 'search[q]', @search[:q], class: 'search-query span4', placeholder: "Search"
                = submit_tag 'Search', class: 'btn btn-primary'
            .brand Contacts
            .btn-group
              %button#check-toggle.btn{data: { action: 'toggle-checkbox', target: '.item-checkbox' }, title: "Toggle Checkboxes" }
                %i.icon-check
              = link_to '#', class: "btn dropdown-toggle", data: { toggle: "dropdown" }, title: "Display" do
                %i.icon-list
                %b.caret
              %ul.dropdown-menu
                %li
                  =link_to manager_people_path(limit: "30"), method: :get do
                    30
                %li
                  =link_to manager_people_path(limit: "100"), method: :get do
                    100
                %li
                  =link_to manager_people_path(limit: "all"), method: :get do
                    All
            .btn-group
              = link_to "#", method: :post, class: 'btn btn-success', title: "Show Selected", remote: true, onclick: "ChangeVis('visible')" do
                %i.icon-eye-open.icon-white  
              = link_to "#", method: :post, class: 'btn btn-danger', title: "Hide Selected", remote: true, onclick: "ChangeVis('hide')" do
                %i.icon-eye-close.icon-white  
              = link_to new_manager_person_path, class: 'btn btn-success' do
                %i.icon-plus.icon-white
                New Contact
    %tr
      %th{style:'width:25px;'}
      %th First Name
      %th Last Name
      %th Work Phone
      %th Actions
  %tbody
    - @people.each do |item|
      %tr
        %td{style:"text-align:center; padding:0;"}
          %label{for: "agency_check_#{item.id}", style: "display:block; min-height:40px;"}
            = check_box_tag "agency_check[#{item.id}]", item.id, nil, class: 'item-checkbox'
        %td= item.first_name
        %td= item.last_name
        - if item.work_phone.nil?
          %td
        - else
          %td= item.work_phone
        %td
          .span1.actions
            .btn-group{id:"action_buttons_#{dom_id(item)}"}
              = render partial: "action_buttons", locals: {item: item}
= paginate @people

:javascript
  $(document).ready(function() {
    $('[data-action="toggle-checkbox"]').on('click', function() {
      $($(this).data('target')).attr("checked", function() {
        $(this).prop("checked", !$(this).attr("checked"));
      });
    });
  })

  function ChangeVis(type) {  
    check_list = [];
    $('input:checkbox').attr("checked", function() {
      if ($(this).attr("checked")) {
        check_list.push($(this).val());
      }
    });

    if (type == "visible")
      { resource = '#{all_visible_manager_people_path}' }
    else 
      { resource = '#{all_hidden_manager_people_path}' }
    
    $.ajax({
      url: resource,
      type: 'POST',
      data: {
        "people_ids[]": check_list
      },
      complete: function(){
        location.reload();
      }
    });
  };
