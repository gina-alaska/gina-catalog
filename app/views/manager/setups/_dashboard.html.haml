.navbar.navbar-static-top
  .navbar-inner
    .brand Settings
    = link_to edit_manager_setup_path, class: 'btn pull-right', title: "Edit Settings" do
      %i.icon-edit
.content
  %dl.dl-horizontal
    %h5 Site Information
    %dt Title
    %dd=ddtext setup.title
    %dt Acronym
    %dd=ddtext setup.acronym
    %dt By line
    %dd=ddtext setup.by_line
    %dt Contact Email
    %dd=ddtext setup.contact_email
    %dt Default Invite Text
    %dd=ddtext setup.default_invite 
    %dt Google Analytics
    %dd=ddtext setup.analytics_account
    %dt Description
    %dd=ddtext setup.description
    %dt Keywords
    %dd=ddtext setup.keywords
    %h5 Site Maps
    %dt Site Projection
    - case(setup.projection)
      - when "EPSG:3338"
        %dd=ddtext "#{setup.projection} (Alaskan Albers)"
      - when "EPSG:3572"
        %dd=ddtext "#{setup.projection} (Polar)"
      - when "EPSG:3857"
        %dd=ddtext "#{setup.projection} (Web Mercator)"
      - else 
        %dd=ddtext "No Projection"
    %dt Use Google Layers
    %dd=ddtext setup.google_layers==true ? "Yes" : "No"
    %h5 Site Social
    %dt Twitter URL
    %dd=ddtext setup.twitter_url
    %dt GitHub URL
    %dd=ddtext setup.github_url
    %dt Facebook URL
    %dd=ddtext setup.facebook_url
