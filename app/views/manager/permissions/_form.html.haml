= bootstrap_form_for [:manager, @permission], layout: :horizontal do |f|
  = f.hidden_field :user_id
  = f.static_control label: 'Name' do
    = @permission.user.name
  = f.static_control label: 'Email' do
    = @permission.user.email

  = f.form_group label: { text: 'Permissions' } do
    - Permission::AVAILABLE_ROLES.each do |role, description|
      = f.check_box role, label: "#{role.to_s.humanize} - #{description}"

  .form-actions
    = link_to :back, class: 'btn btn-default' do
      %i.fa.fa-arrow-left
      Cancel
    .pull-right
      = f.primary
