- if facets.empty?
  .panel-body.text-center{ style: 'padding: 5px 15px; '}
    %strong None found for current search
- else
  - selected = Array.wrap(@search_params[field])
  .panel-body.expand{ id: "#{field}-search".dasherize, style: 'padding-top: 5px; padding-bottom: 0px; '}
    - facets.each do |facet|
      %span.pull-right.badge.badge-default= facet['count']
      %div{ style: 'margin-right: 30px; white-space: nowrap; overflow:hidden; text-overflow: ellipsis;' }
        %label
          = check_box_tag "search[#{field}][]", facet['term'], selected.try(:include?, facet['term'].to_s)
          = facet['display_name']
  - if facets.count > 3
    .panel-body{ style: 'padding-top: 0px; '}
      = link_to 'show more...', "##{field.to_s.dasherize}-search", data: { toggle: 'expand', 'toggletext' => 'show less...' }
