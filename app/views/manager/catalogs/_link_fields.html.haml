.row-fluid
  .span1 
    - if f.object.valid_link
      %i.icon-thumbs-up.text-success.text-center
    - else
      %i.icon-thumbs-down.text-error.text-center
  .span2
    = f.select :category, Link::CATEGORIES, {}, { class: 'span12' }
  .span4= f.text_field :display_text, class: 'span12'
  .span4= f.text_field :url, class: 'span12'
  .span1.actions
    = link_to_remove_fields '<i class="icon-trash icon-white"></i>'.html_safe, f