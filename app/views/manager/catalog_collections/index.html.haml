.navbar.navbar-static-top
  .navbar-inner
    = link_to manager_data_path, class: 'btn btn-primary pull-left' do
      Back

    = link_to new_manager_catalog_collection_path, class: 'btn btn-success pull-right' do
      %i.icon-plus.icon-white
      New Collection

%br/
%table.table.table-bordered.table-striped.table-condensed
  %thead
    %tr
      %th Name
      %th Description
      %th 
  %tbody
    - @catalog_collections.each do |item|
      %tr
        %td= item.name
        %td= item.description
        %td
          = link_to "Edit", edit_manager_catalog_collection_path(item.id), class: 'btn btn-primary'
          = link_to "Delete", manager_catalog_collection_path(item.id), method: :delete, confirm: "Are you sure?", class: 'btn btn-danger'
