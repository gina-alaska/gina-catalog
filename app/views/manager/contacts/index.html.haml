.panel.panel-default
  .panel-heading{ style: 'position: relative' }
    = link_to new_manager_contact_path, class: 'btn btn-sm btn-success panel-btn-right' do
      New Contact
    %ol.breadcrumb
      %li.active
        %i.fa.fa-group
        Contacts
  
  %table.table.table-striped.table-condensed
    %thead
      %tr
        %th.col-lg-3.col-md-3 Name
        %th.col-lg-3.col-md-3 Job Title
        %th.col-lg-3.col-md-3 Email
        %th.col-lg-2.col-md-2 Phone
        %th.col-lg-1.col-md-1 Actions
    %tbody
      = render(partial: "contact_row", collection: @contacts, as: :contact) || "<tr><td colspan=\"5\">There are no contacts available</td></tr>".html_safe
