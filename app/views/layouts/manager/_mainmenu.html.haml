.list-group.horizontal.clearfix
  = active_link_to manager_path, active: :exact, class: 'list-group-item' do
    %h4.list-group-item-heading Dashboard Summary
    %p.list-group-item-text
      Portal overview
  - if can? :update, Portal
    = active_link_to manager_portal_path(current_portal), class: 'list-group-item' do
      %h4.list-group-item-heading Portal Settings
      %p.list-group-item-text
        Manage portal settings
  - if can? :manage, Permission
    = active_link_to manager_permissions_path, class: 'list-group-item' do
      %h4.list-group-item-heading User Permissions
      %p.list-group-item-text
        Invite users and manage permissions
  - if can? :links, :dashboard
    = active_link_to downloads_manager_dashboards_path, class: 'list-group-item' do
      %h4.list-group-item-heading Download Log
      %p.list-group-item-text
        Manage and view downloads
  - if can? :update, Entry
    = active_link_to links_manager_dashboards_path, class: 'list-group-item' do
      %h4.list-group-item-heading Links Manger
      %p.list-group-item-text
        Manage and view bad record links
