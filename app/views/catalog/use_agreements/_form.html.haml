%ul.nav.nav-tabs
  %li.active
    %a{ href: '#use_agreement_form_fields', data: { toggle: 'tab' } } Use Agreement Form
  %li
    %a{ href: '#record_list', data: { toggle: 'tab' } } Record List
    
= simple_form_for [:catalog, @use_agreement], label_errors: true, wrapper: :horizontal_form do |f|
  .tab-content{ style: 'margin-top: 5px;' }
    #use_agreement_form_fields.tab-pane.active
      = f.error_notification
      .row
        .form-inputs
          = f.input :title
          = f.label 'Use Agreement Text', class: 'col-sm-3'
          .col-sm-9
            = f.text_area :body, cols: 40, rows: 10
          
          = f.label 'Required', class: 'col-sm-3'
          .col-sm-9
            = f.check_box :required

    #record_list.tab-pane
      %p List of catalog records that are linked to this use agreement.
      = render 'use_agreements', use_agreement: @use_agreement 
           
    .form-action.action-space
      = link_to :back, class: 'btn btn-default' do
        %i.fa.fa-arrow-left
        Cancel
    
      .pull-right
        = f.button :submit