#sitemanager_toolbar.navbar.navbar-static-top
  .navbar-inner
    %ul.nav
      - if user_signed_in?
        - if current_member.access_cms? or current_member.access_catalog? or current_member.access_settings? or current_member.access_permissions?
          - if controller.send(:_layout).virtual_path.name == 'application'
            %li
              = link_to manager_path do
                %i.icon-cog.icon-spin
                Manage Portal 
          - else
            %li
              = link_to root_path do
                %i.icon-arrow-left
                Back to Site
        - if member_portals.count > 0 # unless current_user.memberships.empty?
          %li.dropdown
            = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
              Switch Portals
              %b.caret
          
            %ul.dropdown-menu
              - member_portals.each do |s|
                %li= link_to s.title, "http://#{ s.default_url }"
      - else
        %li.dropdown
          = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
            Switch Portals
            %b.caret
        
          %ul.dropdown-menu
            - %w{ gina-catalog.dev catalog.northslope.org epscor.alaska.edu southcentral.epscor.alaska.edu southeast.epscor.alaska.edu }.each do |url|
              - if s = SiteUrl.where(url: url).first.try(:setup)
                %li= link_to s.title, "http://#{ s.default_url }"
    
    .pull-right    
      %ul.nav
        - if user_signed_in?
          %li.dropdown.avatar
            = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
              %img{ src: avatar_url(current_user, 20) }
              = current_user.fullname
              %b.caret
            %ul.dropdown-menu.pull-right
              %li
                = link_to toggle_beta_users_path do
                  %i.icon-exclamation
                  = cookies[:beta].present? ? 'Disable' : 'Enable'
                  Beta Access
              
              
              %li.divider
              %li
                = link_to logout_path do
                  %i.icon-lock
                  Logout
        - else 
          %li 
            = link_to login_path do
              %i.icon-lock
              Login