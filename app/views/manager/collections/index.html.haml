.row
  .col-sm-4
    .panel.panel-default
      .panel-body
        = search_form_for [:manager, @q] do |f|
          .form-group
            .input-group
              = f.search_field :name_cont, class: 'form-control', placeholder: 'Search by collection name'
            
              %span.input-group-btn
                = f.submit class: 'btn btn-primary'

      .panel-footer
        = link_to new_manager_collection_path, class: 'btn btn-success btn-block' do
          %i.fa.fa-sitemap
          New Collection
  .col-sm-8
    .panel.panel-default
      .panel-heading{ style: 'position: relative' }
        %ol.breadcrumb
          %li.active
            %i.fa.fa-sitemap
            Collections
      %table.table.table-striped.table-condensed
        %thead
          %tr
            %th.col-sm-8 Name
            %th Hidden
            %th Count
            %th.text-right Actions 
        %tbody
          = render(partial: "collection_row", collection: @collections, as: :collection) || "<tr><td colspan=\"4\">There are no collections defined</td></tr>".html_safe 