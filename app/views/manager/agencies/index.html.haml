.panel.panel-default
  .panel-heading{ style: 'position: relative' }
    = link_to new_manager_agency_path, class: 'btn btn-sm btn-success panel-btn-right' do
      New Agency
      
    .panel-title
      %i.fa.fa-university
      All Agencies
  
  %table.table.table-striped.table-condensed
    %thead
      %tr
        %th Name
        %th Acronym
        %th Description
        %th Actions
    %tbody
      = render(partial: "agency_row", collection: @contacts, as: :contact) || "<tr><td colspan=\"4\">There are no agencies available</td></tr>".html_safe
