- theme = NSCatalog::Application.config.theme
!!! 5
%html
  %head
    = javascript_include_tag "http://glink.gina.alaska.edu/cdn/libs/proj4js-1.1.0/lib/proj4js-compressed.js", "http://maps.google.com/maps/api/js?v=3&sensor=false"
    = javascript_include_tag "http://glink.gina.alaska.edu/cdn/libs/OpenLayers-2.13.1/OpenLayers.js"
    = javascript_include_tag "application"
    = stylesheet_link_tag 'application'
    /[if IE 7]
      = stylesheet_link_tag "font-awesome-ie7.min.css", media: "all"
    = render "layouts/#{theme}/analytics" unless current_setup.analytics_account.nil? or Rails.env == 'development'
    = csrf_meta_tag
    = render 'layouts/theme'
  %body
    .spinner-container
    #flashes
    
    = current_setup.theme.css.html_safe
    .container
      %div{id: (@page.nil? ? 'content' : "#{@page.slug.parameterize}-page") }
        = show_flash_messages
      - if @catalog.map_layers.empty?
        = yield
      - else
        #iframe_with_layers
          =yield
          #map_layers
            = render 'shared/catalogs/map_layers', catalog: @catalog
