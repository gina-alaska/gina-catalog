.row
  .col-lg-7
    = render page
  .col-lg-5
    = render 'image_attachments', page: page

= render 'preview', page: page

- content_for :sidebar do
  = render 'page_list'

  .list-group
    = link_to edit_cms_page_path(page), class: 'list-group-item list-group-item-info' do
      %i.fa.fa-edit.fa-fw
      Edit page
    - if page.system_page?
      = link_to new_cms_page_path, class: 'list-group-item list-group-item-success' do
        %i.fa.fa-plus.fa-fw
        New page
    - else
      = link_to new_cms_page_path(parent: page), class: 'list-group-item list-group-item-success' do
        %i.fa.fa-plus.fa-fw
        New page
      = link_to page, method: :delete, data: { confirm: 'Are you sure? All child pages will also be deleted.  This cannot be undone!' }, class: 'list-group-item list-group-item-danger' do
        %i.fa.fa-trash.fa-fw
        Delete page
    = link_to '#image-attachment-modal', class: 'list-group-item', data: { toggle: 'modal' } do
      %i.fa.fa-fw.fa-image
      Attach image
    = link_to reorder_cms_pages_path, class: 'list-group-item' do
      %i.fa.fa-fw.fa-sort
      Reorder pages

- content_for :help do
  .panel-body
    %span.help-block
      %p
        <b>Pages</b> define each page of the web site and their relationships to each other.  The pages under the "All pages" header are considered "root" pages.  Any pages that are created under them are their children pages.  Pages with the
        %i.fa.fa-gear
        icon are system pages and can not be deleted.  Pages with the
        %i.fa.fa-eye-slash
        icon are hidden and can not be seen on the public side of the web site. 
      %p
        Select the "<b>New page</b>" button above to create a new page.
        %br/
        Select the "<b>Edit page</b>" button above to edit a page.
        %br/
        Select the "<b>Delete page</b>" button above to remove a page (non system pages only).
        %br/
        Select the "<b>Attach image</b>" button above to attach an image to a page.
        %br/
        Select the "<b>Reorder pages</b>" button above to change the order of the pages.
