!!!
%html
  %head
    %title
      gLynx
      = yield :page_title
    = yield :head
    -# = stylesheet_link_tag 'https://api.tiles.mapbox.com/mapbox.js/v2.1.5/mapbox.css'
    -# = javascript_include_tag 'https://api.tiles.mapbox.com/mapbox.js/v2.1.5/mapbox.js'
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    - if signed_in?
      %nav.navbar.navbar-default.navbar-gina.navbar-static-top
        .container-fluid
          .navbar-header
            %button.navbar-toggle{ type: 'button', data: { toggle: 'collapse', target: '#header-navbar' }}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            = link_to root_url, class: 'navbar-brand' do
              = current_portal.try(:title)
          = render 'layouts/header'
    .container-fluid
      = render 'layouts/flash_messages'
      = yield
