.project
  .title= asset.title

  - unless asset.published? || (current_user && current_user.is_an_admin?)
    .not-published
      %h2 This project is pending review by the system moderators
      %p After a moderator has reviewed the project, it will become available for public viewing
    .spacer

  - if asset.published?
    .description.tabbed
      :markdown
        #{asset.description}
    .spacer

    .status.tabbed
      %label Status:
      = asset.status

    -#- unless asset.year_funded.nil?
    -#  .funded.tabbed
    -#    %label Year Funded:
    -#    = asset.year_funded
    - unless asset.start_date.nil?
      .start_date.tabbed
        %label Start Date:
        = asset.start_date.strftime('%Y/%m/%d')
    - unless asset.end_date.nil?
      .end_date.tabbed
        %label End Date:
        = asset.end_date.strftime('%Y/%m/%d')

    .spacer

    - unless asset.primary_contact.nil?
      .primary_contact.tabbed
        %label Primary Contact:
        = render asset.primary_contact
      .spacer

    - unless asset.people.nil? or asset.people.empty?
      .other_contacts.tabbed
        %label Other Contacts:
        = render asset.people
      .spacer

    - unless asset.source_agency.nil?
      .source_agency.tabbed
        %label Primary Agency:
        = asset.source_agency.name

    - unless asset.funding_agency.nil?
      .funding_agency.tabbed
        %label Funding Agency:
        = asset.funding_agency.name

    .agencies.tabbed
      %label Other Agencies:
      = asset.agencies.collect(&:acronym).compact.join(', ')

    .spacer

    - unless asset.locations.nil? or asset.locations.empty?
      .locations.tabbed
        %label Locations:
        = asset.locations.collect(&:name).compact.join(', ')

    .spacer

    -#.gcmd_themes.tabbed
    -#  %label GCMD Themes:
    -#  = asset.gcmd_themes.collect(&:name).compact.join(', ')
    -#.spacer

    .tags.tabbed
      %label Tags:
      = asset.tags.list
      .spacer

    - unless asset.repo.empty?
      .tabbed
        %label Download Link:
        = link_to catalog_url(asset, :format => 'zip'), catalog_url(asset, :format => 'zip'), :target => :_blank
        .spacer

    - unless asset.links.nil? or  asset.links.empty?
      .links.tabbed
        %label Links:
        %ul= render asset.links
      .spacer

    -#- unless asset.note.nil? or asset.note.text.empty?
    -#  .notes.tabbed
    -#    %label Notes:
    -#    = raw RDiscount.new(asset.note.text).to_html
    -#  .spacer

    .project_info_source.tabbed
      .organization
        %label Record Information Source:
        = asset.data_source.name
      .website
        %label Direct Record Link:
        - if asset.data_source.name == 'NSSI'
          = link_to dataasset_url(asset), dataasset_url(asset), :target => :_blank
        - else
          = link_to asset.source_url, asset.source_url, :target => :_blank