var pagetoolbar = $('<%= escape_javascript(render('pagetoolbar', results: @results, total: @total, page: @pagenum, limit: @limit, params: @search_params)) %>');
$(".pagetoolbar").html(pagetoolbar);
var results = $('<%= escape_javascript(render("search_results")) %>');
$(".search-results").html(results);

var collections = $('<%= escape_javascript(render( 'collection_item', collections: current_setup.collections, search_params: @search_params)) %>');
$('#<%= dom_id(current_setup, "collection_collapse") %> .accordion-inner').html(collections);

<% current_setup.descendants.each do |setup| %>
  var collections = $('<%= escape_javascript(render( 'collection_item', collections: setup.collections, search_params: @search_params)) %>');
  $('#<%= dom_id(setup, "collection_collapse") %> .accordion-inner').html(collections);
<% end %>

var parent = $('html, body');
if ($('html').scrollTop() > 150 || $('body').scrollTop() > 150) {
  parent.animate({
    scrollTop: 150
  });  
}
$('.spinner-container').spin(false)

$(document).data('catalog_map').loadFeatures();