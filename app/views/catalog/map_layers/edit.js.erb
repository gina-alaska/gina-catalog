var modal = $('<%= escape_javascript(render('map_layer_modal', map_layer: @map_layer)) %>').modal();
modal.on('hidden.bs.modal', function() {
  $(this).remove();
})
modal.on('shown.bs.modal', function() {

  _modal = this
  $('#map-layer-modal form').on('ajax:success', function(evt, data, status, xhr) {
    $(_modal).modal('hide');
    $(document).trigger('map_layers:refresh');
  });
});
