<% [:notice, :error, :success, :warning].each do |type| %>
  <% next if flash[type].blank? %>
  <% Array.wrap(flash[type]).each do |msg| %>
    new FlashMessage('<%= type %>', '<%= msg %>');
  <% end %>
<% end %>
<% if @redirect_to %>
  top.location = "<%= @redirect_to %>";
<% end %>
<% if @lock_version %>
  $('input.lock_version_field').val(<%= @lock_version %>)
<% end %>