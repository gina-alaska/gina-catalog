= bootstrap_form_for [:admin, @iso_topic], layout: :horizontal, label_col: 'col-lg-3 col-md-3', control_col: 'col-lg-9 col-md-9' do |f|
  = f.alert_message "Please fix the errors below.", error_summary: false
  = f.text_field :iso_theme_code, label: 'Theme Category Code', placeholder: 'Enter 3 character code', wrapper_class: 'required'
  = f.text_field :name, label: 'Topic Category Name', placeholder: 'Add category name', wrapper_class: 'required'
  = f.text_field :long_name, label: 'Topic Category Long Name', placeholder: 'Add category name (long form)'

  .form-action
    = link_to :back, class: 'btn btn-default' do
      %i.fa.fa-arrow-left
      Cancel

    .pull-right
      = f.primary @iso_topic.new_record? ? "Create ISO Topic" : "Update ISO Topic"
