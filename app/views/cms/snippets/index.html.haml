.panel.panel-default
  .panel-heading
    %h1.panel-title Snippets
  %table.table.table-striped
    %thead
      %tr
        %th Name
        %th
    %tbody
      - @cms_snippets.each do |cms_snippet|
        %tr
          %td= cms_snippet.name
          %td
            = link_to 'Show', cms_snippet
            = link_to 'Edit', edit_cms_snippet_path(cms_snippet)
            = link_to 'Destroy', cms_snippet, method: :delete, data: { confirm: 'Are you sure?' }

- content_for :sidebar_menu do
  = link_to new_cms_snippet_path, class: 'list-group-item list-group-item-success' do
    %i.fa.fa-plus.fa-fw
    New snippet
