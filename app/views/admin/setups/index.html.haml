%table.table.table-bordered.table-striped.table-condensed
  %thead
    %tr
      %td{colspan:4, style: 'padding:0;'}
        .navbar.navbar-static-top
          .navbar-inner
            .brand Setups
            .pull-right
              = link_to new_admin_setup_path, class: 'btn btn-success' do
                %i.icon-plus.icon-white
                New Setup
    %tr
      %th Title
      %th URL's
      %th Contact Email
      %th Actions
  %tbody
    - @setups.each do |setup|
      %tr
        %td
          = setup.title
        %td
          = setup.urls.collect(&:url).join(",")
        %td
          = setup.contact_email
        %td
          .btn-group
            = link_to edit_admin_setup_path(setup.id), class: 'btn', title: "Edit" do
              %i.icon-edit
            = link_to admin_setup_path(setup.id), method: :delete, confirm: "Are you sure?", class: 'btn btn-danger', title: "Delete Setup" do
              %i.icon-trash.icon-white
