= link_to edit_manager_person_path(item.id), class: 'btn', title: "Edit" do
  %i.icon-edit    
- if item.setups.include?(current_setup)
  = link_to_function '<i class="icon-eye-open icon-white"></i>'.html_safe, "ChangeVis('hidden', [#{ item.id}]);", class: 'btn btn-info', title: "Hide Person"
- else
  = link_to_function '<i class="icon-eye-close icon-white"></i>'.html_safe, "ChangeVis('visible', [#{item.id}]);", class: 'btn btn-danger', title: "Show Person"
