= nested_form_for [:manager, @person] do |f|
  - unless @person.errors.full_messages.empty?
    .alert.alert-error
      %h4 Errors prevents this record from being saved
      %ul
        - @person.errors.full_messages.each do |err|
          %li= err
  .row-fluid
    .field.span12
      = f.label :salutation
      = f.text_field :salutation, class: "span2"

      = f.label :first_name
      = f.text_field :first_name, class: "span8"

      = f.label :last_name
      = f.text_field :last_name, class: "span8"

      = f.label :suffix
      = f.text_field :suffix, class: "span2"

      = f.label :email
      = f.text_field :email, class: "span12"

      = f.label :url
      = f.text_field :url, class: "span12"

      #phones
        .pull-right
          = f.link_to_add :phone_numbers, :data => { :target => "#phones" }, class: "btn btn-success" do
            %i.icon-plus.icon-white
            Add a Phone Number
        %h4 Phone Numbers
        .header.row-fluid
          .span4 Type
          .span6 Number
          .span2.actions Actions
        .body
          .phones
            = f.fields_for :phone_numbers
  .row-fluid
    .span12
      .form-actions
        = f.submit class: 'btn btn-primary pull-right'
