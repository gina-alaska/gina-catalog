%h3 Select Report Elements to Include
= form_tag export_search_path, method: :get do
  = hidden_field_tag 'serialized_search', @search_params.to_json
  %label.checkbox
    = hidden_field_tag 'visible[agencies]', 'off'
    = check_box_tag 'visible[agencies]', 'on', check_export_visible_params("agencies")
    Agencies
    %br/
  %label.checkbox
    = hidden_field_tag 'visible[collections]', 'off'
    = check_box_tag 'visible[collections]', 'on', check_export_visible_params("collections")
    Collections
    %br/
  %label.checkbox
    = hidden_field_tag 'visible[contacts]', 'off'
    = check_box_tag 'visible[contacts]', 'on', check_export_visible_params("contacts")
    Contacts
    %br/
  %label.checkbox
    = hidden_field_tag 'visible[data]', 'off'
    = check_box_tag 'visible[data]', 'on', check_export_visible_params("data")
    Data Type
    %br/
  %label.checkbox
    = hidden_field_tag 'visible[description]', 'off'
    = check_box_tag 'visible[description]', 'on', check_export_visible_params("description")
    Description
    %br/
  %label.checkbox
    = hidden_field_tag 'visible[info]', 'off'
    = check_box_tag 'visible[info]', 'on', check_export_visible_params("info")
    Dates, Status
    %br/
  %label.checkbox
    = hidden_field_tag 'visible[iso]', 'off'
    = check_box_tag 'visible[iso]', 'on', check_export_visible_params("iso")
    Iso Topics
    %br/
  %label.checkbox
    = hidden_field_tag 'visible[links]', 'off'
    = check_box_tag 'visible[links]', 'on', check_export_visible_params("links")
    Links
    %br/
  %label.checkbox
    = hidden_field_tag 'visible[location]', 'off'
    = check_box_tag 'visible[location]', 'on', check_export_visible_params("location")
    Geokeywords, Location
    %br/
  %label.checkbox
    = hidden_field_tag 'visible[tags]', 'off'
    = check_box_tag 'visible[tags]', 'on', check_export_visible_params("tags")
    Tags
    %br/
  %label.checkbox
    = hidden_field_tag 'visible[title]', 'off'
    = check_box_tag 'visible[title]', 'on', check_export_visible_params("title")
    Title
    %br/
  %label.checkbox
    = hidden_field_tag 'visible[url]', 'off'
    = check_box_tag 'visible[url]', 'on', check_export_visible_params("url")
    Catalog Record URL
    %br/
    %br/
  = submit_tag "Submit", class: 'btn btn-primary pull-right'

= render partial: "report_results", locals: { results: @results } 
